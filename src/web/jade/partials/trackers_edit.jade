ol.breadcrumb
    li
        a(href="/trackers") Trackers
    li.active {{ formTitle }}
alert(ng-repeat='alert in alerts' type='{{alert.type}}' close='closeAlert($index)') {{alert.msg}}
form(name='dataForm', role='form', ng-submit='submit()')
    .panel.panel-primary
        .panel-heading
            h3.panel-title {{ formTitle }}
        .panel-body
            .row
                .col-sm-12
                    .form-group
                        label.control-label(for='host') Host
                        input.input-lg.form-control(name='host', ng-model='data.host')
                    .form-group
                        label.control-label(for='port') Port
                        input.input-lg.form-control(name='port', ng-model='data.port')
        .panel-footer.btn-group-lg.text-right
            input.btn.btn-primary.btn-lg(type='submit', value='Save tracker')
