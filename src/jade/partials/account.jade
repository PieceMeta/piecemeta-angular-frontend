alert(ng-repeat='alert in alerts' type='{{alert.type}}' close='closeAlert($index)') {{alert.msg}}
form(name='userForm', role='form',ng-submit='submit()')
    .panel.panel-primary
        .panel-heading
            h3.panel-title Update your account
        .panel-body
            .col-sm-6
                .form-group
                    label.control-label(for='name') Name
                    input.input-lg.form-control(name='name', ng-model='user.name')
                .form-group
                    label.control-label(for='email') E-Mail
                    input.input-lg.form-control(name='email', type='email', ng-model='user.email')
            .col-sm-6
                .form-group
                    label.control-label(for='password') New password
                    input.input-lg.form-control(name='password', type='password', ng-model='user.password')
                .form-group
                    label.control-label(for='password') Confirm new password
                    input.input-lg.form-control(name='password_confirm', type='password', ng-model='user.password_confirm', data-password-verify='user.password')
            .col-sm-6
        .panel-footer.btn-group-lg.text-right
            input.btn.btn-primary.btn-lg(type='submit', value='Save changes')


